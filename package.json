{
  "name": "use-mouse-distance",
  "version": "0.0.5",
  "description": "A React hook that measures the distance from an element's center to the user's mouse.",
  "main": "index.js",
  "homepage": "https://github.com/bennettdams/use-mouse-distance",
  "scripts": {
    "build": "parcel build index.ts && tsc --build tsconfig.build.json",
    "test": "vitest",
    "lint": "eslint .",
    "type-check": "tsc --pretty --noEmit",
    "tc": "npm run tc",
    "check": "npm run type-check && npm run lint",
    "format": "prettier . --write",
    "all": "npm run check && npm run build",
    "version": "npm version",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "react",
    "hooks",
    "react-hooks",
    "mouse",
    "distance"
  ],
  "author": "Bennett Dams (https://twitter.com/BennettDams)",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-react": "^7.22.5",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.11.0",
    "parcel-bundler": "^1.12.5",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
